<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Hibernate</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">manukpoloz2000</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Update database on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Annotated entity classes -->
        <mapping class="airport_hibernate.pojo_classes.Address"/>
        <mapping class="airport_hibernate.pojo_classes.Company"/>
        <mapping class="airport_hibernate.pojo_classes.Passenger"/>
        <mapping class="airport_hibernate.pojo_classes.PassInTrip"/>
        <mapping class="airport_hibernate.pojo_classes.Trip"/>

        <!--embeddable class="airport_hibernate.pojo_classes.Address">
            <attribute name="city"/>
            <attribute name="country"/>
        </embeddable-->

    </session-factory>
</hibernate-configuration>